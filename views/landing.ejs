<%- include('partials/header', { title: "Landing" }) %>
    <h1>Welcome, <%= user.username %>!</h1>

    <!-- Dashboard -->
     <!-- If the user is an admin, display all users else display the user's dashboard -->
    <% if (user.role === 'admin') { %>
        <h2>All Users</h2>
        <ul>
            <% users.forEach(function(u) { %>
                <li><%= u.username %> - <%= u.email %> - <%= u.role %></li>
            <% }); %>
        </ul>
    <% } else { %>
        <h2>Your Dashboard</h2>
        <p>Welcome to your dashboard, <%= user.username %>!</p>
    <% } %>

    <!-- Logout Form -->
    <form action="/logout" method="GET">
        <button type="submit">Logout</button>
    </form>
<%- include('partials/footer') %>
